{
    "$id": "https://github.com/CoreumFoundation/iso20022-addressbook/addressbook.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Address Book",
    "description": "addressbook.json is a metadata file that contains accounts with their ISO20022 identifications.",
    "type": "object",
    "required": [
      "addresses"
    ],
    "properties": {
      "$schema": {
        "type": "string",
        "minLength": 1,
        "pattern": "^(\\.\\./)+addressbook\\.schema\\.json$"
      },
      "addresses": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/address"
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false,
    "$defs": {
      "address": {
        "type": "object",
        "description": "The (primary) key used to identify an object within the Address Book Registry.",
        "required": [
          "bech32_encoded_address",
          "public_key"
        ],
        "properties": {
          "bech32_encoded_address": {
            "type": "string",
            "minLength": 3,
            "maxLength": 64,
            "pattern": "[a-z02-9]+1[qpzry9x8gf2tvdw0s3jn54khce6mua7l]+"
          },
          "public_key": {
            "type": "string"
          },
          "party": {
            "$ref": "#/$defs/party"
          }
        },
        "additionalProperties": false
      },
      "party": {
        "type": "object",
        "description": "The ISO20022 branch and identification.",
        "required": [
            "identification"
        ],
        "properties": {
          "identification": {
            "type": "object",
            "description": "The ISO20022 identification.",
            "required": [
            ],
            "properties": {
              "bic": {
                "type": "string",
                "minLength": 8,
                "maxLength": 11,
                "pattern": "[A-Z0-9]{4}[A-Z]{2}[A-Z0-9]{2}([A-Z0-9]{3})?"
              },
              "clearing_system_member_identification": {
                "type": "object",
                "properties": {
                  "clearing_system_id": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 5
                      },
                      "proprietary": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 35
                      }
                    }
                  },
                  "member_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 35
                  }
                }
              },
              "lei": {
                "type": "string",
                "minLength": 20,
                "maxLength": 20,
                "pattern": "[A-Z0-9]{18}[0-9]{2}"
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 140
              },
              "postal_address": {
                "$ref": "#/$defs/postal_address"
              },
              "other": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "minLength": 35,
                    "maxLength": 35
                  },
                  "issuer": {
                    "type": "string",
                    "minLength": 35,
                    "maxLength": 35
                  },
                  "scheme_name": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 5
                      },
                      "proprietary": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 35
                      }
                    }
                  }
                }
              }
            }
          },
          "branch": {
            "type": "object",
            "description": "The ISO20022 identification.",
            "required": [
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1,
                "maxLength": 35
              },
              "lei": {
                "type": "string",
                "minLength": 20,
                "maxLength": 20,
                "pattern": "[A-Z0-9]{18}[0-9]{2}"
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 140
              },
              "postal_address": {
                "$ref": "#/$defs/postal_address"
              }
            }
          }
        }
      },
      "postal_address": {
        "type": "object",
        "properties": {
          "address_type": {
            "type": "object",
            "properties": {
              "code": {
                "enum": [
                  "ADDR",
                  "PBOX",
                  "HOME",
                  "BIZZ",
                  "MLTO",
                  "DLVY"
                ]
              },
              "proprietary": {
                "id": {
                  "type": "string",
                  "minLength": 4,
                  "maxLength": 4,
                  "pattern": "[a-zA-Z0-9]{4}"
                },
                "issuer": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 35
                },
                "scheme_name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 35
                }
              }
            }
          },
          "care_of": {
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "department":{
            "type": "string",
            "minLength": 1,
            "maxLength": 70
          },
          "sub_department": {
            "type": "string",
            "minLength": 1,
            "maxLength": 70
          },
          "street_name":{
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "building_number": {
            "type": "string",
            "minLength": 1,
            "maxLength": 16
          },
          "building_name":{
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "floor": {
            "type": "string",
            "minLength": 1,
            "maxLength": 70
          },
          "unit_number":{
            "type": "string",
            "minLength": 1,
            "maxLength": 16
          },
          "postal_box": {
            "type": "string",
            "minLength": 1,
            "maxLength": 16
          },
          "room":{
            "type": "string",
            "minLength": 1,
            "maxLength": 70
          },
          "postal_code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 16
          },
          "town_name":{
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "town_location_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "district_name":{
            "type": "string",
            "minLength": 1,
            "maxLength": 140
          },
          "country_sub_division": {
            "type": "string",
            "minLength": 1,
            "maxLength": 35
          },
          "country_code": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "pattern": "[A-Z]{2}"
          },
          "address_line": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 70
            },
            "maxContains": 7
          }
        }
      }
    }
  }
  
